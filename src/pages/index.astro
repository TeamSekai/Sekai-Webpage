<style>
	.wave {
		background: linear-gradient(to right,#ffffff,#ffffff,#ffffff,#ffffff,#4fc7ff,#ffffff,#ffffff,#ffffff) 0 / 200%;
		height: 100%;
		animation: 3s a linear infinite;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
  	}
  	@keyframes a{
		100% { background-position: 200%; }
  	}
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.title {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		text-align: center;
	}
	.title h1 {
		font-size: 3rem;
		font-weight: 600;
	}
	.title h2 {
		font-size: 2rem;
		font-weight: 300;
		white-space:nowrap;
		margin: 0 auto;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 3rem;
		font-weight: 600;
		text-align: center;
	}
	h2 {
		font-size: 2rem;
		font-weight: 300;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
	.content {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: row;
		/* for dev(if need)
		border: 3px solid yellow;
		*/
		justify-items: center;
		width: auto;
		height: auto;
	}

	.content .item {
		margin: 8%;
	}
	.content img {
		width: 40vw;
	}
	.item {
		text-align: left;
		/* for dev(if need)
		border: 3px solid red;
		*/
	}
	.item h1, h2, p, li {
		width: 40vw;
		height: auto;
		font-size: 1.25em;
	}
	.content:nth-child(odd) {
		flex-direction: row-reverse;
	}
@media screen and (max-width: 480px) {
	.content {
		flex-direction: column;
	}
	.content:nth-child(odd) {
		flex-direction: column;
	}
	.content img {
		width: 70vw;
		height: auto;
		justify-content: center;
		text-align: center;
	}
	.title h2 {
		display: none;
	}
	.item h1, h2, p, li {
		width: 80vw;
		height: auto;
		text-align: center;
		font-size: 1.0em;
	}
}
</style>
